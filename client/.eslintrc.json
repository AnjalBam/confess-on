{
    "extends": ["next", "next/core-web-vitals"],
    "env": {
        "jest": true
    },
    "rules": {
        "no-console": "warn",
        "no-unused-vars": "off",
        "no-undef": "error",
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "indent": ["error", 4]
    },
    "overrides": [
        {
            "files": ["*.ts", "*.mts", "*.cts", "*.tsx"],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}
